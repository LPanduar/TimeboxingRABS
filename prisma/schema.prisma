// prisma/schema.prisma

// Bloque `datasource` para la configuración de la base de datos
datasource db {
  provider = "mysql" // Tipo de base de datos
  url      = env("DATABASE_URL") // Usa la variable de entorno DATABASE_URL
}

// Bloque `generator` para generar el cliente de Prisma
generator client {
  provider = "prisma-client-js"
}

// Define tus modelos aquí, por ejemplo:
model User {
  id         Int    @id @default(autoincrement())
  name       String
  email      String @unique
  password   String
  start_time String
  end_time   String
  status     Int
}
